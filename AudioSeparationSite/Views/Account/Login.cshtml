@{
    ViewData["Title"] = "Login";
    var err = TempData["Error"] as string;
}
<div class="max-w-md mx-auto bg-white rounded-2xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Autentificare</h2>
    @if (!string.IsNullOrEmpty(err))
    {
        <div class="mb-3 text-red-700 bg-red-100 border border-red-200 rounded-xl px-3 py-2">@err</div>
    }
    <form method="post" action="/account/login" class="grid gap-3">
        <div>
            <label class="text-sm">Email</label>
            <input name="email" type="email" required class="w-full mt-1 border rounded-xl px-3 py-2" />
        </div>
        <div>
            <label class="text-sm">Parolă</label>
            <input name="password" type="password" required class="w-full mt-1 border rounded-xl px-3 py-2" />
        </div>
        <button class="px-4 py-2 rounded-xl bg-zinc-900 text-white text-sm font-semibold hover:bg-zinc-700" type="submit">Intră</button>
    </form>
    <p class="text-sm text-zinc-600 mt-3">Nu ai cont? <a class="underline" href="/account/register">Creează unul</a></p>
</div>