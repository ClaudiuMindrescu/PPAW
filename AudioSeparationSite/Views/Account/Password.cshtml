@{
    ViewData["Title"] = "Schimbă parola";
}
<div class="max-w-md mx-auto bg-white rounded-2xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Schimbă parola</h2>
    <form method="post" action="/account/password" class="grid gap-3">
        @Html.AntiForgeryToken()
        <div>
            <label class="text-sm">Parola curentă</label>
            <input name="currentPassword" type="password" required
                   class="w-full mt-1 border rounded-xl px-3 py-2" />
        </div>
        <div>
            <label class="text-sm">Parola nouă</label>
            <input name="newPassword" type="password" required
                   class="w-full mt-1 border rounded-xl px-3 py-2" />
        </div>
        <button class="px-4 py-2 rounded-xl bg-zinc-900 text-white text-sm font-semibold hover:bg-zinc-700"
                type="submit">
            Salvează
        </button>
    </form>
</div>
