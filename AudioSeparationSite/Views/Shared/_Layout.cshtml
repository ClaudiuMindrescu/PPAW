@{
    var title = ViewData["Title"] as string ?? "Audio Separation Site";
}
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-50 text-zinc-900">
    <header class="border-b bg-white">
        <div class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
            <h1 class="text-xl font-bold">AudioSplit</h1>
            <nav class="space-x-4">
    <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/">Dashboard</a>
    <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/#plans">Planuri</a>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/Home/Index">Procesează</a>
        <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/account">Account</a>
    }
    else
    {
        <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/account/login">Login</a>
        <a class="text-sm text-zinc-600 hover:text-zinc-900" href="/account/register">Creează cont</a>
    }
</nav>

        </div>
    </header>
    <main class="max-w-5xl mx-auto px-4 py-6">
        
        @if (TempData["Message"] is string ok && !string.IsNullOrEmpty(ok))
        {
            <div class="mb-4 text-green-700 bg-green-100 border border-green-200 rounded-xl px-3 py-2">@ok</div>
        }
        @if (TempData["Error"] is string err && !string.IsNullOrEmpty(err))
        {
            <div class="mb-4 text-red-700 bg-red-100 border border-red-200 rounded-xl px-3 py-2">@err</div>
        }
    
        @RenderBody()
    </main>
    <footer class="border-t text-sm text-zinc-500">
        <div class="max-w-5xl mx-auto px-4 py-6">© @DateTime.UtcNow.Year AudioSplit — demo educațional</div>
    </footer>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>